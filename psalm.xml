    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="module/Application/src" />
        <directory name="module/Comments/src" />
        <directory name="module/Commons/src" />
        <directory name="module/Forums/src" />
        <directory name="module/Message/src" />
        <directory name="module/Traffic/src" />
        <directory name="module/User/src" />
        <directory name="module/Votings/src" />
